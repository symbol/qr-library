{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": false,
    "noEmitOnError": true,
    "removeComments": false
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples/readme/"
  ],
  "include": [
    "test/*.spec.ts",
    "src/*.ts",
    "examples/*.ts"
  ]
}